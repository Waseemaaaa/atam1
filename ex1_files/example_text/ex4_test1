# -----------------------------------------------------
# TEST 1: Legal White Pawn Move (one step forward)
# -----------------------------------------------------
# white pawn at (1,4) -> (2,4)
# play = [0, 1, 4]
# valid - expected result = 1
# -----------------------------------------------------

.section .data

# --- Before move ---
board_1:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0  
    .byte 'P','P','P','P','P','P','P','P' 
    .byte 'R','N','B','Q','K','B','N','R'

# --- After move ---
board_2:
    .byte 'r','n','b','q','k','b','n','r' 
    .byte 'p','p','p','p', 0 ,'p','p','p'
    .byte 0,0,0,0,'p',0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'P','P','P','P','P','P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'
 
play:
    .int 0, 1, 4          # 0 = white, line=1, col=4

valid:
    .byte 7                # output result placeholder

.section .text

    # After ex4 returns, check if valid = 1 
    movzbl valid(%rip), %eax  
    cmp $1, %al                
    je success                 

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall

